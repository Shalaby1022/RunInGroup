@model IEnumerable<Club>

<div class="row">
    @foreach (var club in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (!string.IsNullOrEmpty(club.Image))
                {
                    <img src="@club.Image" class="card-img-top" alt="Club Image">
                }
                <div class="card-body">
                    <h5 class="card-title">@club.Title</h5>
                    <p class="card-text">@club.Description</p>
                    <p class="card-text"><strong>Category:</strong> @club.ClubCategory</p>
                    <p class="card-text"><strong>Location:</strong>@club.Address.City , @club.Address.State</p>

                    <a asp-controller="Club" asp-action="Details" asp-route-id="@club.Id" class="btn btn-primary">View Details</a>
                    <a asp-controller="Club" asp-action="Edit" asp-route-id="@club.Id" class="btn btn-secondary">Edit</a>
                    <a asp-controller="Club" asp-action="Delete" asp-route-id="@club.Id" class="btn btn-danger" >Delete</a>

                </div>
            </div>
        </div>
    }
    </div>

